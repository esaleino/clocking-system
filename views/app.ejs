<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%-include('header')-%> <%-include('navbar')-%>
    <script>
      var tableData = '<%-JSON.stringify(tableData)%>';
      //   window.history.pushState('', '', '/');
    </script>
  </head>

  <body onload="pageLoadApp()">
    <div class="container-fluid">
      <div class="row" style="min-width: 100%">
        <div class="col-4">
          <h1><%= title %></h1>
          <p>This is the app page</p>
          <form action="../userpost" method="POST">
            <div class="form-group">
              <p class="h4">ID only for editing</p>
              <input class="form-control" id="identifier" name="id" type="number" readonly />
              <p class="h4">Your username</p>
              <input class="form-control" id="user" name="username" type="text" readonly value="<%= loggedinUser %>" />
              <p class="h4">Input task name</p>
              <input class="form-control" id="task" name="project" required />
              <p class="h4">Input time spent in hours</p>
              <input class="form-control" id="time" name="hours" type="number" required />
              <p class="h4">Input notes</p>
              <input class="form-control" id="notes" name="info" required value="none" />
              <input class="btn btn-dark w-100 mt-4" type="submit" />
              <!-- <button onclick="submitData()" disabled>hello</button>
                    <button onclick=" testClick()">Test</button> -->
            </div>
          </form>
          <div class="row">
            <form action="../clocking" method="POST" style="min-width: 100%">
              <div class="row ml-4 mr-4">
                <div class="col-4 text-center">
                  <p><%= clockin %></p>
                  <input class="btn btn-primary w-100" type="submit" formaction="../clocking/clockin" value="Clock in" />
                </div>
                <div class="col-4 text-center">
                  <p><%= onlunch %></p>
                  <input class="btn btn-secondary w-100" type="submit" formaction="../clocking/lunch" value="To lunch" />
                </div>
                <div class="col-4 text-center">
                  <p>Placeholder text</p>
                  <input class="btn btn-warning w-100" type="submit" formaction="../clocking/clockout" value="Clock out" />
                </div>
              </div>
            </form>
          </div>
        </div>
        <!-- <div class="col-sm w-20"></div> -->
        <div class="col" style="max-width: 100%">
          <br />
          <table class="table table-striped table-bordered" id="table">
            <thead>
              <tr>
                <th class="th-sm">ID</th>
                <th class="th-sm">PROJECT</th>
                <th class="th-sm">HOURS</th>
                <th class="th-sm">INFO</th>
              </tr>
            </thead>
            <tbody id="tableBody"></tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
